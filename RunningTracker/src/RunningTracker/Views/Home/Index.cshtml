@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/runIcon.png" width="620" height="350" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p style="color: red;">
                    Use our Web application!
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/groupRun.jpg" width="4479" height="2628" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p style="color: red;">
                    Run with your friends and track everyone's progress!
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/run.jpg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p style="color: red;">
                    We have powerful features to track your running habits!
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/stretch.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p style="color: red;">
                     Don't forget to strech before your run to prevent injuries!
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

